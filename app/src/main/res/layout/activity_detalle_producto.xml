<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleProducto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="centerCrop">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="#ff8000">


            <Button
                android:id="@+id/btn_inicio"
                android:layout_width="64dp"
                android:layout_height="55dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/inicio"

                android:textColor="#000"></Button>

            <Button
                android:id="@+id/btn_perfilt"
                android:layout_width="60dp"
                android:layout_height="54dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/perfil"
                android:textColor="#000"></Button>

            <Button
                android:id="@+id/btn_buscart"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/buscar"
                android:textColor="#000"></Button>

            <Button
                android:id="@+id/btn_carrito"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"

                android:background="@drawable/carrito"

                android:textColor="#000"></Button>

        </LinearLayout>


        <ImageView

            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="200dp">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Picaras Chocolate x6 unid"></TextView>

        <android.widget.NumberPicker
            android:id="@+id/numberPicker1"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"></android.widget.NumberPicker>

        <Button
            android:id="@+id/agregar_car"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_redondedo_naranja"
            android:text="Agregar al carrito"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Detalles del producto"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="93dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="4dp"
                    android:text="Peso :"
                    android:textColor="#000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="240gr"
                    android:textColor="#000"
                    android:textSize="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="4dp"
                    android:text="Unidades :"
                    android:textColor="#000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="6"
                    android:textColor="#000"
                    android:textSize="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="4dp"
                    android:text="Sabor :"
                    android:textColor="#000"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Chocolate"
                    android:textColor="#000"
                    android:textSize="20dp"></TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>